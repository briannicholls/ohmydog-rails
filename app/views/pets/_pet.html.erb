<% 
  image_html = nil
  if @pet.image.attached?
    image_html = image_tag(@pet.image, class: "w3-circle w3-margin-bottom", style: "width:150px; height:150px; object-fit: cover;")
  end

  attributes = [
    { label: "Pet Type", value: @pet.pet_type },
    { label: "Breed", value: @pet.breed },
    { label: "Birthday", value: @pet.birthday&.strftime("%B %d, %Y") },
    { label: "Gender", value: @pet.gender },
    { label: "Temperament", value: @pet.temperament },
    { label: "Appearance", value: @pet.appearance },
    { label: "Notes", value: @pet.notes }
  ]
%>

<%= render 'layouts/show_page',
           title: @pet.name,
           subtitle: @pet.breed,
           attributes: attributes,
           edit_path: edit_pet_path(@pet),
           resource_name: :pet,
           image_tag_html: image_html %>
