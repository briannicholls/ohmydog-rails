<%= form_tag :login %>
<table class="form w3-table">
<tr>
  <th><h1>Log In</h1></th>
</tr>
<% if flash.alert %>
<tr>
  <td></td><td><strong><em><%= flash.alert %></em></strong></td>
</tr>
<% end %>
<tr>
  <td><%= label_tag :email %></td>
  <td><%= text_field_tag :email %></td>
</tr>

<tr>
  <td><%= label_tag :password %></td>
  <td><%= password_field_tag :password %></td>
</tr>

<tr>
  <td></td><td><%= submit_tag 'Submit' %></td>
</tr>

<tr>
  <td>Or:</td>
</tr>

<tr>
  <td colspan="2"><%= link_to 'Log In With Google', '/auth/google_oauth2' %></td>
</tr>

</table>
