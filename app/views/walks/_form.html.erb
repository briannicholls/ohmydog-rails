<div class="">


<table class="form">

<%= form_for @walk do |f| %>

<tr>
  <td><%= f.label :date %></td>
  <td><%= f.date_select :date %></td>
</tr>

<tr>
  <td><%= f.label :window_start %></td>
  <td><%= f.time_select :window_start, {ampm: true, minute_step: 15} %></td>
</tr>

<tr>
  <td><%= f.label :window_end %></td>
  <td><%= f.time_select :window_end, {ampm: true, minute_step: 15} %></td>
</tr>

<tr>
  <td><%= f.label :pet_id %></td>
  <td><%= f.collection_select :pet_id, Pet.all.order(:name), :id, :name_with_owner, include_blank: true %></td>
</tr>

<tr>
  <td><%= f.label :notes %></td>
  <td><%= f.text_area :notes %></td>
</tr>

<tr>
  <td><%= f.label :walk_type %></td>
  <td><%= f.text_field :walk_type %></td>
</tr>

<tr>
  <td></td><td><%= f.submit %></td>
</tr>

<% end %>

</table>

</div>
