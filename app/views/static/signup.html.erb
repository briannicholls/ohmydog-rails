<h1>Create Account</h1>

<table class="form">
  <%= form_for @user do |f| %>

  <tr>
    <td><%= f.label :fname, 'First Name' %></td>
    <td><%= f.text_field :fname %></td>
  </tr>

  <tr>
    <td><%= f.label :lname, 'Last Name' %></td>
    <td><%= f.text_field :lname %></td>
  </tr>

  <tr>
    <td><%= f.label :email %></td>
    <td><%= f.text_field :email %></td>
  </tr>

  <tr>
    <td><%= f.label :password %></td>
    <td><%= f.password_field :password %></td>
  </tr>

  <tr>
    <td><%= f.label :password_confirmation, 'Confirm Password' %></td>
    <td><%= f.password_field :password_confirmation %></td>
  </tr

  <tr>
    <td></td><td><%= f.submit %></td>
  </tr>

  <% end %>

</table>

<p>Or</p>

<p><%= link_to 'Sign Up With Google', '/auth/google_oauth2' %></p>
