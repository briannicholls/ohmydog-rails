<table class="w3-table w3-bordered">
  <tr>
    <th colspan="2"><h1><%= @user.name %></h1></th>
  </tr>

  <tr>
    <td>Email:</td>
    <td><%= @user.email %></td>
  </tr>

  <tr>
    <td>Phone:</td>
    <td><%= @user.phone %></td>
  </tr>

  <tr>
    <td>Role:</td>
    <td><%= @user.role %></td>
  </tr>

  <tr>
    <td>Status:</td>
    <td><%= @user.status %></td>
  </tr>

  <tr>
    <td>Created On:</td>
    <td><%= @user.created_at %></td>
  </tr>

  <tr>
    <td colspan="2"><%= link_to 'Edit User', edit_user_path(@user), class: 'w3-button w3-bar w3-lime' %></td>
  </tr>
</table>
