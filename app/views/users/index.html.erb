<table class="w3-table w3-bordered">
  <tr>
    <th colspan="3"><h1>Users</h1></th>
  </tr>

  <tr>
    <th colspan="3"><%= link_to 'Create New User', new_user_path %></th>
  </tr>

  <tr>
    <th>Name</th>
    <th>Role</th>
    <th>Email</th>
  </tr>

  <% @users.each do |user| %>
  <tr>
    <td><%= link_to user.name, user_path(user) %></td>
    <td><%= user.role %></td>
    <td><%= user.email %></td>
  </tr>
  <% end %>

</table>
