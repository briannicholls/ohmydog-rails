<%= render layout: 'devise/shared/w3_card_outer_wrapper', locals: { title: "Sign up" } do %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "w3-container w3-padding-24" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <p>
      <%= f.label :fname, class: "w3-text-grey" %><br />
      <%= f.text_field :fname, autofocus: true, class: "w3-input w3-border w3-round", required: true %>
    </p>

    <p>
      <%= f.label :lname, class: "w3-text-grey" %><br />
      <%= f.text_field :lname, class: "w3-input w3-border w3-round", required: true %>
    </p>

    <p>
      <%= f.label :email, class: "w3-text-grey" %><br />
      <%= f.email_field :email, autocomplete: "email", class: "w3-input w3-border w3-round", required: true %>
    </p>

    <p>
      <%= f.label :password, class: "w3-text-grey" %>
      <% if @minimum_password_length %>
      <em class="w3-small w3-text-grey">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "w3-input w3-border w3-round", required: true %>
    </p>

    <p>
      <%= f.label :password_confirmation, class: "w3-text-grey" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w3-input w3-border w3-round", required: true %>
    </p>

    <p class="w3-center w3-margin-top">
      <%= f.submit "Sign up", class: "w3-button w3-black w3-round-large w3-hover-dark-grey w3-padding-large" %>
    </p>
  <% end %>

  <div class="w3-container w3-center w3-padding-16">
    <%= render "devise/shared/links" %>
  </div>
<% end %>
