<%= render layout: 'devise/shared/w3_card_outer_wrapper', locals: { title: "Resend unlock instructions" } do %>
  <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: "w3-container w3-padding-24" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <p>
      <%= f.label :email, class: "w3-text-grey" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w3-input w3-border w3-round", required: true %>
    </p>

    <p class="w3-center w3-margin-top">
      <%= f.submit "Resend unlock instructions", class: "w3-button w3-black w3-round-large w3-hover-dark-grey w3-padding-large" %>
    </p>
  <% end %>

  <div class="w3-container w3-center w3-padding-16">
    <%= render "devise/shared/links" %>
  </div>
<% end %>
